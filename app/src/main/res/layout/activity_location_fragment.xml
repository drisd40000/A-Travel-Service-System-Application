<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.LocationFragment">
    <Button
        android:id="@+id/lalf_addressbutton"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Show Address"
        android:textSize="30dp"
        android:background="@color/colorAccent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />
<Button
    android:id="@+id/lalf_locationmapbutton"
    android:layout_below="@+id/lalf_addressbutton"
    android:layout_marginTop="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:textSize="30dp"
    android:text="Show Location"
    android:background="@color/colorAccent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"/>
    <Button
        android:id="@+id/lalf_routebutton"
        android:layout_below="@+id/lalf_locationmapbutton"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:text="View Route"
        android:background="@color/colorAccent"
        android:paddingLeft="43dp"
        android:paddingRight="43dp"/>
</RelativeLayout>