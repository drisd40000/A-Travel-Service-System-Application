<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ScanFragment">
    <Button
        android:layout_width="138dp"
        android:layout_height="138dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/scanpic"
        android:id="@+id/lasf_scanbutton"
        />

    <TextView
        android:id="@+id/lasf_text1"
        android:layout_below="@+id/lasf_scanbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SCAN NOW"
        android:textColor="#0000CD"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/lasf_text2"
        android:layout_below="@+id/lasf_text1"
        android:padding="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULT"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/lasf_sharebutton"
        android:layout_below="@+id/lasf_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:layout_gravity="bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="16dp"
        android:padding ="2dp"
        android:layout_marginBottom="4dp"
        />
</RelativeLayout>